@{
    ViewData["Title"] = "PocketNurse Import Page";
    Layout = "~/Views/Import/_Layout.cshtml";
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary()
    </div>
}
    <!-- https://docs.microsoft.com/en-us/aspnet/core/mvc/models/file-uploads?view=aspnetcore-2.1 -->
    <form id="upload" method="post" class="well form-horizontal" enctype="multipart/form-data" asp-controller="Import" asp-action="Upload">
        <div>
            <label for="sheet_upload">Choose sheet to upload (XLSX)</label>
            <input type="file" id="sheet_upload" name="sheet_upload" accept=".xlsx" required>
        </div>
        <div class="preview">
            <p>No files currently selected for upload</p>
        </div>
        <div>
            <button>Upload</button>
        </div>
    </form>